    cx.lineWidth = 3
    cx.moveTo(200, 300);
    cx.quadraticCurveTo(600, 200, 750, 400);
    cx.stroke();
    cx.closePath();
    //
    cx.beginPath();
    cx.moveTo(200, 300);
    cx.quadraticCurveTo(80, 500, 800, 500);
    cx.stroke();
    cx.closePath();
    //
    cx.beginPath();
    cx.moveTo(200, 450);
    cx.quadraticCurveTo(400, 1000, 800, 700);
    cx.stroke();
    cx.closePath();
